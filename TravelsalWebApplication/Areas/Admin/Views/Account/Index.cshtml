@model AccountViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Add New Guide</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">

                    <div class="form-group">
                        @Html.Label("Sender")
                        <input type="text"
                               class="form-control"
                               asp-for="SenderId" />
                    </div>

                    <div class="form-group">
                        @Html.Label("Receiver")
                        <input type="text"
                               class="form-control"
                               asp-for="ReceiverId" />
                    </div>

                    <div class="form-group">
                        @Html.Label("Amount")
                        <input type="text"
                               class="form-control"
                               asp-for="Amount" />
                    </div>
                    <button class="btn btn-danger btn-buy-now">
                        Send
                    </button>

                </div>
            </div>
        </div>

    </div>
</form>

