@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Update Announcement</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">
                    <input type="hidden" asp-for="AnnouncementID" />
                    <div class="form-group">
                        @Html.Label("Title")
                        <input type="text"
                               class="form-control"
                               asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @Html.Label("Content")
                        <textarea cols="30" rows="5"
                                  class="form-control"
                                  asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <button class="btn btn-danger btn-buy-now">
                        Save
                    </button>

                </div>
            </div>
        </div>

    </div>
</form>

