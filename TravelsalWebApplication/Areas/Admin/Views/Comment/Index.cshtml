@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">List of Comments</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Destination</th>
                        <th>Comment</th>
                        <th>Date</th>
                        <th>Actions</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CommentUser</strong>
                            </td>
                            <td>@item.Destination.City</td>
                            <td>@item.CommentContent.Substring(0,10) ...</td>
                            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button"
                                            class="btn p-0 dropdown-toggle hide-arrow"
                                            data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Comment/Details/@item.CommentID"><i class="bx bx-edit-alt me-1"></i> Check</a>
                                        <a class="dropdown-item" href="/Admin/Comment/DeleteComment/@item.CommentID"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                            @if (item.CommentStatus == true)
                            {
                                <td><span class="badge bg-label-success me-1">Active</span></td>
                            }
                            else
                            {
                                <td><span class="badge bg-label-danger me-1">False</span></td>
                            }

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

