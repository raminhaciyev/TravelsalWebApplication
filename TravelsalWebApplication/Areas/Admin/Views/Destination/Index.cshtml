@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">List of Destinations</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>City</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Day Night</th>
                        <th>Actions</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.City</strong>
                        </td>
                        <td>@item.Price $</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="@item.Description.Substring(0,3) ...">
                                    <img src="@item.Image" alt="Avatar" class="rounded-circle" />
                                </li>
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="@item.Description.Substring(0,8) ...">
                                    <img src="@item.DImage1" alt="Avatar" class="rounded-circle" />
                                </li>
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="@item.Description.Substring(0,8) ...">
                                    <img src="@item.DImage2" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td>@item.DayNight</td>
                        <td>
                            <div class="dropdown">
                                <button type="button"
                                        class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Admin/Destination/UpdateDestination/@item.DestinationID"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/Admin/Destination/DeleteDestination/@item.DestinationID"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                        @if (item.Status == true)
                        {
                            <td><a href="/Admin/Destination/ChangeStatus/@item.DestinationID" class="badge bg-label-success me-1">Active</a></td>
                        }
                        else
                        {
                            <td><a href="/Admin/Destination/ChangeStatus/@item.DestinationID" class="badge bg-label-danger me-1">False</a></td>
                        }
                    </tr>
                    }

                </tbody>
            </table>
            <br />
            <div >
                <a href="/Admin/Destination/AddDestination"
                   
                   class="btn btn-danger btn-buy-now">Add New</a>
            </div>
        </div>
    </div>
</div>

