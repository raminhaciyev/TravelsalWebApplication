@model GetDestinationByIdQueryResult
@{
    ViewData["Title"] = "GetDestinationId";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Edit Destination</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">
                    @Html.HiddenFor(x => x.DestinationID)
                    <div class="input-group input-group-merge">
                        <input type="text"
                               class="form-control"
                               placeholder="City"
                               asp-for="City"
                               aria-describedby="basic-addon33" />
                        <span class="input-group-text" id="basic-addon33"></span>
                    </div>

                    <div class="input-group input-group-merge">
                        <input type="text"
                               class="form-control"
                               placeholder="Day Night"
                               asp-for="DayNight"
                               aria-describedby="basic-addon33" />
                        <span class="input-group-text" id="basic-addon33"></span>
                    </div>

                    <div class="input-group input-group-merge">
                        <input type="text"
                               class="form-control"
                               placeholder="Price"
                               asp-for="Price"
                               aria-describedby="basic-addon33" />
                        <span class="input-group-text" id="basic-addon33"></span>
                    </div>

                </div>
            </div>
            <button class="btn btn-danger btn-buy-now">
                Update
            </button>
        </div>


        
    </div>
</form>

