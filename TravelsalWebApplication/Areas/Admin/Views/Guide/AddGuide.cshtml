@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Add New Guide</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">

                    <div class="form-group">
                        @Html.Label("Fullname")
                        <input type="text"
                               class="form-control"
                               asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @Html.Label("Instagram")
                        <input type="text"
                               class="form-control"
                               asp-for="InstagramURL" />
                    </div>

                    <div class="form-group">
                        @Html.Label("Description")
                        <textarea cols="30" rows="5"
                                  class="form-control"
                                  asp-for="Description" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button class="btn btn-danger btn-buy-now">
                        Add
                    </button>

                </div>
            </div>
        </div>

    </div>
</form>

