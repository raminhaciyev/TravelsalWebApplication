@model TravelsalWebApplication.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Send Mail</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">

                    <div class="form-group">
                        @Html.Label("Mail To:")
                        <input type="text"
                               class="form-control"
                               asp-for="Receiver" />
                       
                    </div>

                    <div class="form-group">
                        @Html.Label("Subject")
                        <input type="text"
                               class="form-control"  asp-for="Subject" />
                             
                    </div>

                    <div class="form-group">
                        @Html.Label("Content")
                        <textarea cols="30" rows="5"
                                  class="form-control"
                                  asp-for="Body"></textarea>
                       
                    </div>
                    <button class="btn btn-danger btn-buy-now">
                        Send
                    </button>

                </div>
            </div>
        </div>

    </div>
</form>

