@model TravelsalWebApplication.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<form method="post">
    <div class="row">
        <div class="col-md-7 mt-4">
            <div class="card">
                <div class="card-header pb-0 px-3">
                    <h6 class="mb-0">Profile information</h6>
                </div>
                <div class="card-body pt-4 p-3">
                    <div class="ms-auto text-end">
                        <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                            <div class="d-flex flex-column">
                                <h6 class="mb-3 text-sm">Main details</h6>
                                <span class="mb-2 text-xs">Name: <span class="text-dark font-weight-bold ms-sm-2">@Html.TextBoxFor(x => x.name, new { @class = "mb-2 text-xs", @disabled = true })</span></span>
                                <span class="mb-2 text-xs">Surname: <span class="text-dark font-weight-bold ms-sm-2">@Html.TextBoxFor(x => x.surname, new { @class = "mb-2 text-xs", @disabled = true })</span></span>
                                <span class="mb-2 text-xs">Gender: <span class="text-dark font-weight-bold ms-sm-2">@Html.TextBoxFor(x => x.gender, new { @class = "mb-2 text-xs", @disabled = true })</span></span>
                                <span class="mb-2 text-xs">Password: <span class="text-dark font-weight-bold ms-sm-2">@Html.TextBoxFor(x => x.password, new { @class = "mb-2 text-xs", @disabled = true })</span></span>


                            </div>

                        </li>
                        <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                            <div class="d-flex flex-column">
                                <h6 class="mb-3 text-sm">Contact details</h6>
                                <span class="mb-2 text-xs">Phone Number: <span class="text-dark font-weight-bold ms-sm-2">@Html.TextBoxFor(x => x.phone, new { @class = "mb-2 text-xs", @disabled = true })</span></span>
                                <span class="mb-2 text-xs">Email Address: <span class="text-dark font-weight-bold ms-sm-2">@Html.TextBoxFor(x => x.mail, new { @class = "mb-2 text-xs", @disabled = true })</span></span>
                            </div>

                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</form>
