@model TravelsalWebApplication.Areas.Member.Models.UserEditViewModel

@{
    ViewData["Title"] = "UpdatePassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-md-7 mt-4">
            <div class="card">
                <div class="card-header pb-0 px-3">
                    <h6 class="mb-0">Main details</h6>
                </div>
                <div class="card-body pt-4 p-3">

                    <ul class="list-group">
                        <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                            <div class="d-flex flex-column">
                                @Html.Label("Password")
                                <input type="password" asp-for="password" class="form-control" />
                                <span asp-validation-for="password" style="color:  #ff0000;"></span>
                                <br />

                                @Html.Label("Confirm Password")
                                <input type="password" asp-for="confirmpassword" class="form-control" />
                                <span asp-validation-for="confirmpassword" style="color:  #ff0000;"></span>
                            </div>
                        </li>
                    </ul>
                    <br />
                    <button class="btn btn-primary btn-sm mb-0">Save</button>
                    <a href="/Member/Profile/Index/" class="btn btn-outline-danger btn-sm mb-0">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

